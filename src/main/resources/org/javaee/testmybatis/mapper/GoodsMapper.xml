<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.javaee.testmybatis.mapper.OrdersMapper">

    <select id="selectOrderById" parameterType="Integer" resultType="org.javaee.testmybatis.model.OrderPo">
        SELECT *
        FROM orders
        WHERE id = #{id}
    </select>

    <select id="selectOrderItemsByOrderId" parameterType="Integer"
            resultType="org.javaee.testmybatis.model.OrderItemPo">
        select *
        from order_item
        where order_id = #{orderId}
    </select>

    <insert id="insertNewOrder" parameterType="org.javaee.testmybatis.model.OrderPo">
        insert into orders
        values (#{id},
                #{customer_id},
                #{order_sn},
                #{pid},
                #{consignee},
                #{region_id},
                #{address},
                #{mobile},
                #{message},
                #{order_type},
                #{freight_price},
                #{coupon_id},
                #{discount_price},
                #{presale_id},
                #{groupon_id},
                #{rebate_num},
                #{confirm_time},
                #{shipment_sn},
                #{state},
                #{substate},
                #{be_deleted})
    </insert>

    <insert id="insertNewOrderItem" parameterType="org.javaee.testmybatis.model.OrderItem">
        insert into order_item
        values (#{id},
                #{order_id},
                #{goods_sku_id},
                #{quantity},
                #{price},
                #{discount},
                #{name},
                #{coupon_activity_id},
                #{be_shared_id})
    </insert>

</mapper>

